<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelStyle">
        <item name="android:textColor">@color/labelColor</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="labelStyleValue">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="labelStyleValueMultiLine">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="userIdStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:longClickable">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="containerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_38</item>
        <item name="android:layout_marginRight">@dimen/margin_38</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="editTextMultiline">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/password_text_size</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:longClickable">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="footerButton" parent="android:Widget.Button">
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_5</item>
        <item name="android:layout_marginRight">@dimen/margin_5</item>
        <item name="android:background">@drawable/bg_footer_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_12</item>
    </style>
    <!--Progress Bar-->
    <style name="progressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:color">@color/hblColor</item>
    </style>

    <style name="alertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/labelColor</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/alert_d_style</item>
    </style>

    <style name="customDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">90%</item>
    </style>
</resources>
